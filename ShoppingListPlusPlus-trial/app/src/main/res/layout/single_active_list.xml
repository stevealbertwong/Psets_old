<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small">

    <TextView
        android:layout_weight="4"
        android:id="@+id/text_view_list_name"
        style="@style/ListItemText"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_list_name"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/created_by"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_created_by_text_size" />

        <TextView
            android:layout_weight="10"
            android:id="@+id/text_view_created_by_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_list_name"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/created_by"
            android:layout_toRightOf="@+id/created_by"
            android:textSize="@dimen/list_created_by_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="10"
            android:id="@+id/text_view_people_shopping_count"
            android:hint="0人正在瀏覽"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_view_list_name"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"

            android:textColor="@color/light_black"
            android:textSize="12dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_view_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讚：0"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_created_by_text_size"
            android:layout_below="@+id/text_view_list_name"
            android:layout_toLeftOf="@+id/button_like"
            android:layout_toStartOf="@+id/button_like" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/button_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_heart_full"
            android:visibility="visible"
            android:onClick="addLike"

 />


    </LinearLayout>


</LinearLayout>