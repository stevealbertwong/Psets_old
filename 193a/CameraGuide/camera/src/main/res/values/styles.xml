<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom GridView Photo Gallery Style -->
    <style name="GridView.PhotoGallery" parent="android:Widget.GridView">
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:choiceMode">none</item>
    </style>
</resources>
